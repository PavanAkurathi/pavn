{
  "name": "hive",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --filter=!@repo/jobs",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "db:reset": "bun run --filter @repo/database reset"
  },
  "devDependencies": {
    "prettier": "^3.7.4",
    "turbo": "^2.8.0",
    "typescript": "5.9.2"
  },
  "engines": {
    "node": ">=20.9.0"
  },
  "packageManager": "bun@1.3.5",
  "resolutions": {
    "drizzle-orm": "0.45.1",
    "drizzle-kit": "0.31.8",
    "zod": "^4.3.6",
    "@hookform/resolvers": "3.9.0"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}