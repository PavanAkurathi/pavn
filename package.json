{
  "name": "hive",
  "private": true,
  "scripts": {
    "build": "node build.mjs",
    "dev": "turbo run dev --filter=!@repo/jobs",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "test": "turbo run test",
    "db:reset": "bun run --filter @repo/database reset"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/google-libphonenumber": "^7.4.30",
    "@types/node": "^25.3.2",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "esbuild": "^0.27.3",
    "prettier": "^3.8.1",
    "turbo": "^2.8.12",
    "typescript": "5.7.3"
  },
  "engines": {
    "node": ">=20.9.0"
  },
  "packageManager": "bun@1.3.5",
  "resolutions": {
    "drizzle-orm": "0.45.1",
    "drizzle-kit": "0.31.8",
    "zod": "4.3.6",
    "better-auth": "1.4.17",
    "@better-auth/expo": "1.4.18",
    "@better-auth/stripe": "1.4.17",
    "@hookform/resolvers": "4.1.0",
    "expo-router": "~6.0.23",
    "@expo/metro-runtime": "~6.1.2",
    "expo-network": "~8.0.8",
    "react-native": "0.81.5",
    "react-hook-form": "7.69.0"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
