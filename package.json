{
  "name": "hive",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "db:reset": "bun run --filter @repo/database reset"
  },
  "devDependencies": {
    "prettier": "^3.7.4",
    "turbo": "^2.7.6",
    "typescript": "5.9.2"
  },
  "engines": {
    "node": ">=20.9.0"
  },
  "packageManager": "bun@1.3.5",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}