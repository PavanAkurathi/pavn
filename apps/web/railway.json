{
    "$schema": "https://railway.com/railway.schema.json",
    "build": {
        "builder": "NIXPACKS",
        "buildCommand": "turbo run build --filter=web...",
        "watchPatterns": [
            "apps/web/**",
            "packages/ui/**",
            "packages/auth/**",
            "packages/database/**",
            "packages/email/**"
        ]
    },
    "deploy": {
        "startCommand": "cd apps/web && npm start",
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10
    }
}