{
  "extends": "@repo/typescript-config/base.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": ".",
    "jsx": "react-jsx",
    // "types": ["bun"],
    "moduleResolution": "bundler",
    "module": "ESNext",
    "noEmit": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "zod/v4": [
        "./node_modules/zod",
        "../../node_modules/zod"
      ],
      "*": [
        "./node_modules/*",
        "../../node_modules/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "api/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}