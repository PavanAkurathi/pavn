# Package manager configuration for proper dependency hoisting
# This ensures Vercel builds deduplicate dependencies correctly

# pnpm-specific: Enable hoisting for all packages
# (npm ignores these settings and uses its default hoisting behavior)
hoist=true
hoist-pattern[]=*

# pnpm-specific: Don't fail on peer dependency mismatches
strict-peer-dependencies=false

# npm-specific: Use legacy peer dependency resolution
legacy-peer-deps=false
