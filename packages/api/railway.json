{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "watchPatterns": [
            "packages/api/**",
            "packages/database/**",
            "packages/auth/**",
            "packages/config/**",
            "packages/observability/**",
            "pnpm-lock.yaml",
            "turbo.json"
        ]
    },
    "deploy": {
        "startCommand": "bun run start",
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10
    }
}