{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "RAILPACK",
        "installCommand": "bun install",
        "buildCommand": "bun run build --filter=@repo/api",
        "watchPatterns": [
            "packages/api/**",
            "packages/database/**",
            "packages/auth/**",
            "packages/config/**",
            "packages/observability/**",
            "pnpm-lock.yaml",
            "turbo.json"
        ]
    },
    "deploy": {
        "startCommand": "bunx turbo run start --filter=@repo/api",
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10
    }
}