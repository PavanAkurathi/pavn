{
    "$schema": "https://railway.com/railway.schema.json",
    "build": {
        "builder": "NIXPACKS",
        "buildCommand": "turbo run build --filter=@repo/shifts-service...",
        "watchPatterns": [
            "packages/shifts/**",
            "packages/database/**"
        ]
    },
    "deploy": {
        "startCommand": "bun packages/shifts/src/server.ts",
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10
    }
}