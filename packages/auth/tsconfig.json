{
    "extends": "../typescript-config/base.json",
    "compilerOptions": {
        "outDir": "dist",
        "rootDir": "src",
        "declaration": true,
        "declarationMap": true,
        "lib": [
            "ESNext",
            "DOM"
        ],
        "target": "ESNext",
        "types": [
            "node"
        ],
        "jsx": "react-jsx",
        "baseUrl": ".",
        "paths": {
            "zod/v4": [
                "./node_modules/zod",
                "../../node_modules/zod"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}